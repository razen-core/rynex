{
  "name": "zenweb",
  "version": "1.0.0",
  "description": "A minimalist TypeScript framework for building reactive web applications",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/runtime/index.js",
    "./runtime": "./dist/runtime/index.js",
    "./helpers": "./dist/runtime/helpers/index.js",
    "./state": "./dist/runtime/state.js",
    "./dom": "./dist/runtime/dom.js"
  },
  "bin": {
    "zenweb": "./dist/cli/bin/zenweb.js"
  },
  "scripts": {
    "build:framework": "tsc",
    "build": "pnpm build:framework && node dist/cli/bin/zenweb.js build",
    "dev": "pnpm build:framework && node dist/cli/bin/zenweb.js dev",
    "watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["framework", "reactive", "ui", "minimalist", "zenweb", "typescript"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "esbuild": "^0.19.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
